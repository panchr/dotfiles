{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "noti -m \"Claude is waiting...\""
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(git grep:*)",
      "Bash(git diff:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)"
    ]
  }
}
