### Theming ###
font-family = Monaco
font-size = 12
# Render characters slightly closer together.
adjust-cell-width = -5%

# Use a custom icon, which is loaded from ~/.config/ghostty/Ghostty.icns.
macos-icon = custom

# xterm-ghostty is not recognized by some programs, e.g. the Emacs server.
term = xterm-256color
theme = Tomorrow Night

background = #0A0A0A
foreground = #69cbf0
selection-background = #7d9dbc
selection-foreground = #000000

### Cursor ###
cursor-style = bar
cursor-style-blink = true
adjust-cursor-thickness = 3
cursor-click-to-move = true

### Misc. ###
maximize = true
window-save-state = always
mouse-hide-while-typing = true
mouse-scroll-multiplier = 4
auto-update = check

### Keybindings ###
keybind = super+i=prompt_surface_title
